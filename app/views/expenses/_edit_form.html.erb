<%= form_for expense, :url => {:controller => 'expenses', :action => 'update'}, :remote => true do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Edit Expense</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <div class="row">
      <%= f.text_field :description, :class=>"form-control", :placeholder => "Description" %>
    </div>
    <div class="row section_gap md">
      <%= f.text_field :amount, :class=>"form-control", :placeholder => "Amount" %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Update Expense</button>
  </div>
<% end %>
